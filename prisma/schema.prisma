// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("HEROKU_URL")
  shadowDatabaseUrl  = env("HEROKU_SHADOW_URL")
}

model User {
   id             String   @id @default(uuid())
   email          String   @unique
   name           String
   task           Task[]
   wellness       Wellness[]
   exercise       Exercise[]
   productivity   Productivity[]
   note           Note[]
}

model Date {
   id             String      @id @default(uuid())
   date           DateTime    @db.Date @unique
   wellness       Wellness[]
   exercise       Exercise[]
   tasks          Task[]
   notes          Note[]
   productivity   Productivity[]
}

model TaskStatus {
   id       String   @id @default(uuid())
   name     String
   tasks    Task[]
}

model Task {
   id          String      @id @default(uuid())
   name        String
   userId      String
   user        User        @relation(fields: [userId], references:[id])
   dateId      String
   date        Date        @relation(fields: [dateId], references:[id])
   goalTime    String
   actualTime  String
   timeTracker Int
   statusId    String
   status      TaskStatus  @relation(fields: [statusId], references:[id])
}

model Exercise {
   id          String   @id @default(uuid())
   userId      String
   user        User     @relation(fields: [userId], references:[id])
   completed   Boolean  @default(false)
   dateId      String
   date        Date     @relation(fields: [dateId], references:[id])
}

model Wellness {
   id          String   @id @default(uuid())
   userId      String
   user        User     @relation(fields: [userId], references:[id])
   rating      Int
   dateId      String
   date        Date     @relation(fields: [dateId], references:[id])
}

model Productivity {
   id          String   @id @default(uuid())
   userId      String
   user        User     @relation(fields: [userId], references:[id])
   score       Int
   dateId      String
   date        Date     @relation(fields: [dateId], references:[id])
}

model Note {
   id          String   @id @default(uuid())
   userId      String
   user        User     @relation(fields:[userId], references:[id])
   note        String
   dateId      String
   date        Date     @relation(fields: [dateId], references:[id])
}